@page "/about"

<PageTitle>Stevens Pass Companion - About</PageTitle>

<MudContainer Class="mb-12">
    <MudBreadcrumbs Items="breadcrumbs"></MudBreadcrumbs>
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.h4">About</MudText>
        </MudItem>
        @*     <MudItem xs="12">
        <MudText Typo="Typo.h5">@name</MudText>
        <MudText Typo="Typo.h5">Stevens Pass Companion</MudText>
        <MudText Typo="Typo.h5">Version: </MudText>
    </MudItem> *@
        <!-- Donate Section -->
        <MudItem xs="12">
            <MudText Typo="Typo.h6">Donate</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudText Typo="Typo.body1">Stevens Pass Companion is built in our spare time and donations are appreciated! All dontations will help cover development costs. Thank you for the support!</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudFab StartIcon="@Icons.Material.Filled.Payment"
                    Label="Donate"
                    Href="/Donate" />
        </MudItem>
        <!-- Contact Section -->
        <MudItem xs="12">
            <MudText Typo="Typo.h6">Contact</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudText Typo="Typo.body1">Need to report an issue, have a feature idea, or just have a question?</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudFab StartIcon="@Icons.Material.Filled.ContactMail"
                    Label="Contact Us"
                    Href="/Contact" />
        </MudItem>
        <!-- Release Notes Section -->
        <MudItem xs="12">
            <MudText Typo="Typo.h6">Release Notes</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudText Typo="Typo.body1">Check out the release notes to see what is new.</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudFab StartIcon="@Icons.Material.Filled.Note"
                    Label="Release Notes"
                    Href="/ReleaseNotes" />
        </MudItem>
        <!-- Disclaimer Section -->
        <MudItem xs="12">
            <MudText Typo="Typo.h6">Disclaimer</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudText Typo="Typo.body1">Stevens Pass Companion is not affilated with Stevens Pass Vail Resorts, NOAA, or WSDOT.</MudText>
        </MudItem>
        <!-- Privacy Section -->
        <MudItem xs="12">
            <MudText Typo="Typo.h6">Personal Privacy</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudText Typo="Typo.body1">Stevens Pass Companion does not log or share your personal information. We do not track you. We do not profile you. Period.</MudText>
        </MudItem>
    </MudGrid>
</MudContainer>

