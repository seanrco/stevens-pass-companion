@page "/wsdot-stevens-pass"

@inject ILogger<WSDOTStevensPass> _logger

<PageTitle>Stevens Pass Companion - WSDOT Stevens Pass Report</PageTitle>

<MudContainer Class="mb-12">
    <MudBreadcrumbs Items="breadcrumbs"></MudBreadcrumbs>
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.h4">@header</MudText>
        </MudItem>
    </MudGrid>
    <MudGrid>
        <MudItem xs="12">
            <MudFab StartIcon="@Icons.Material.Filled.Outbound"
                    Label="@wsdotText"
                    Size="Size.Small"
                    Href="@wsdotUrl"
                    Target="_blank" />
        </MudItem>
        <WSDOTReportPartial Value="StevensPass"></WSDOTReportPartial>
        <WSDOTCamerasPartial Value="StevensPass"></WSDOTCamerasPartial>
    </MudGrid>
</MudContainer>


@code {

    private static string header = "WSDOT Stevens Pass Report";
    private static string wsdotUrl = "https://wsdot.com/travel/real-time/mountainpasses/stevens";
    private static string wsdotText = "wsdot.com";

    private List<BreadcrumbItem> breadcrumbs = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/"),
        new BreadcrumbItem(header, href: null, disabled: true),
    };

}