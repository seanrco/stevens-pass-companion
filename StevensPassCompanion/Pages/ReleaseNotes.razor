@page "/ReleaseNotes"

<PageTitle>Stevens Pass Companion - Release Notes</PageTitle>

<MudContainer Class="mt-8 mb-4">
    <MudBreadcrumbs Items="breadcrumbs"></MudBreadcrumbs>
</MudContainer>

<MudContainer Class="mb-12">
    <MudGrid>
        <MudItem xs="12">
            <MudText Typo="Typo.h4">Release Notes</MudText>
        </MudItem>
        <MudItem xs="12">
            <MudTimeline TimelineAlign="TimelineAlign.Start">
                <MudTimelineItem Color="Color.Dark" Elevation="25" TimelineAlign="TimelineAlign.End">
                    <ItemOpposite>
                        <MudText Color="Color.Dark" Typo="Typo.h6">Version 1.0</MudText>
                    </ItemOpposite>
                    <ItemContent>
                        <MudPaper Elevation="0" Class="mt-n1">
                            <MudText Color="Color.Dark" Typo="Typo.h6" GutterBottom="true">SPKA</MudText>
                            <MudText Typo="Typo.body1">First release of the app was launched.</MudText>
                        </MudPaper>
                    </ItemContent>
                </MudTimelineItem>
            </MudTimeline>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {

    private List<BreadcrumbItem> breadcrumbs = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/"),
        new BreadcrumbItem("About", href: "/about"),
        new BreadcrumbItem("Release Notes", href: null, disabled: true),
    };

}