@page "/wsdot-stevens-pass"

@inject ILogger<WSDOTStevensPass> _logger

<PageTitle>Stevens Pass Companion - @title</PageTitle>

<BreadcrumbsComp Value="@breadcrumbs"></BreadcrumbsComp>

<TitleComp Value="@title"></TitleComp>

<SubtitleComp Value="@subtitle"></SubtitleComp>

<ExternalSiteButtonComp Label="@wsdotText"
                    Href="@wsdotUrl"
                    Name="@wsdotText"></ExternalSiteButtonComp>

<WSDOTReportComp Value="StevensPass"></WSDOTReportComp>
<WSDOTCamerasComp Value="StevensPass"></WSDOTCamerasComp>

@code {

    private static readonly string title = "WSDOT Stevens Pass Report";

    private readonly string subtitle = "Before travelling be sure to also visit the official full WSDOT Report.";

    private readonly string wsdotUrl = "https://wsdot.com/travel/real-time/mountainpasses/stevens";

    private readonly string wsdotText = "wsdot.com";

    private List<BreadcrumbItem> breadcrumbs = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/"),
        new BreadcrumbItem(title, href: null, disabled: true),
    };

}