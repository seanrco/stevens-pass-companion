@page "/wsdot-blewett-pass"

@inject ILogger<WSDOTBlewettPass> _logger

<PageTitle>Stevens Pass Companion - @title</PageTitle>

<BreadcrumbsComp Value="@breadcrumbs"></BreadcrumbsComp>

<TitleComp Value="@title"></TitleComp>

<SubtitleComp Value="@subtitle"></SubtitleComp>

<ExternalSiteButtonComp Label="@wsdotText"
                    Href="@wsdotUrl"
                    Name="@wsdotText"></ExternalSiteButtonComp>

<WSDOTReportComp Value="BlewettPass"></WSDOTReportComp>
<WSDOTCamerasComp Value="BlewettPass"></WSDOTCamerasComp>

@code {

    private static readonly string title = "WSDOT Blewett Pass Report";

    private readonly string subtitle = "Before travelling be sure to also visit the official full WSDOT Report.";

    private static string wsdotUrl = "https://wsdot.com/travel/real-time/mountainpasses/blewett";

    private static string wsdotText = "wsdot.com";

    private readonly List<BreadcrumbItem> breadcrumbs = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/"),
        new BreadcrumbItem(title, href: null, disabled: true),
    };

}